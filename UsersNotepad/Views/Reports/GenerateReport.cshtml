
<div class="modal" id="generateReport" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Generowanie raportu</h5>   
      </div>
      <div class="modal-body">
          <form action="/Reports/DownloadPDF" method="get">
            <label for="format">Wybierz format, w którym ma zostać wygenerowany dokument:</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="format" id="txt" value="txt"  >
              <label class="form-check-label" for="txt">
               .txt
              </label>
            </div> 
            <div class="form-check">
              <input class="form-check-input" type="radio" name="format" id="pdf" value="pdf" checked>
              <label class="form-check-label" for="pdf">
                .pdf
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="format" id="csv" value="csv">
              <label class="form-check-label" for="excel">
                .csv
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="format" id="xml" value="xml">
              <label class="form-check-label" for="xml">
                .xml
              </label>
            </div>

            <button type="submit" class="btn btn-primary" data-generate="GenerateReport">Generuj raport</button>
          
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="GenerateReport">Anuluj</button>
      </div>
    </div>
  </div>
</div>
<script>
        $('#generateReportModal').on('change', '[name="format"]', function (e) {

            var form = $(this).parents('.modal').find('form');
            var format = form.find('input[name=format]:checked').val();

            if(format == 'xml') form.attr('action','/Reports/DownloadXML');
            else if(format == 'pdf') form.attr('action','/Reports/DownloadPDF');
            else if(format == 'txt') form.attr('action','/Reports/DownloadTXT');
            else form.attr('action','/Reports/DownloadCSV');
    });
    </script>